{
    "name": "loomi-paint-advisor",
    "version": "1.0.0",
    "description": "A Clean Architecture Express.js API for paint advisory.",
    "main": "dist/server.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
